#!/bin/bash

set -e

if [[ $# -eq 0 ]]; then
  >&2 echo "Usage:"
  >&2 echo -e "\t$0 [first-release] [second-release] ..."
  exit 1
fi

pcfdev_dir=$(cd `dirname $0` && cd .. && pwd)
pcfdev_sha=$(git -C "$pcfdev_dir" rev-parse HEAD)

function check() {
  sha=$(git -C "$1" rev-parse HEAD)
  [[ $sha = $pcfdev_sha ]] && exit 1
  [[ -n "$(git -C "$1" status --porcelain)" ]] && exit 1
  return 0
}

check $pcfdev_dir/bosh/src/github.com/cppforlife/bosh-provisioner
for release in $@; do
  check $pcfdev_dir/releases/${release}-release
done
