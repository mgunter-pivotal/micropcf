#!/bin/bash

set -e

if [[ -z $1 ]]; then
  echo "Usage:"
  echo -e "\t$0 domain"
  exit 1
fi

domain=$1

export CONFIG_PATH=`mktemp -t config.XXXXXXXX`
cat <<EOF >$CONFIG_PATH
{
  "service_name": "p-redis",
  "plan_names": [
    "shared-vm"
  ],
  "admin_password": "admin",
  "admin_user": "admin",
  "api": "api.$domain",
  "apps_domain": "$domain",
  "create_permissive_security_group": true,
  "skip_ssl_validation": true
}
EOF

pcfdev_dir=$(cd `dirname $0` && cd .. && pwd)

pushd "$pcfdev_dir/test/src/github.com/mdelillo/cf-redis-smoke-tests" >/dev/null
  GOPATH=$pcfdev_dir/test:$PWD/Godeps/_workspace \
  PATH=$pcfdev_dir/test/bin:$PWD/Godeps/_workspace/bin:$PATH \
  ./bin/test
popd >/dev/null
