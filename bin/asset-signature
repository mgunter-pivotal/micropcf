#!/bin/bash

set -e

if [[ $# -eq 0 ]]; then
  >&2 echo "Usage:"
  >&2 echo -e "\t$0 [first-release] [second-release] ..."
  exit 1
fi

pcfdev_dir=$(cd `dirname $0` && cd .. && pwd)
bosh_provisioner_dir=$pcfdev_dir/bosh/src/github.com/cppforlife/bosh-provisioner

versions="bosh-provisioner $(git -C "$pcfdev_dir" submodule status "$bosh_provisioner_dir" | cut -b 2-41)\n"
for release in $@; do
  release_dir=$pcfdev_dir/releases/${release}-release
  release_sha=$(git -C "$pcfdev_dir" submodule status "$release_dir" | cut -b 2-41)
  versions="${versions}${release}-release ${release_sha}\n"
done

echo -e $versions | grep -v '^$' | sort | cksum | cut -d' ' -f 1
